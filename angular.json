{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "jhipster-cesium": {
      "root": "",
      "sourceRoot": "src/main/webapp",
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "skipTests": true,
          "style": "scss"
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "prefix": "jhi",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "assets": [{ "glob": "**/*", "input": "./node_modules/cesium/Build/Cesium", "output": "./assets/cesium" }],
          "styles": ["./node_modules/cesium/Build/Cesium/Widgets/widgets.css"],
          "scripts": ["./node_modules/cesium/Build/Cesium/Cesium.js"]
        }
      }
    }
  },
  "defaultProject": "jhipster-cesium",
  "cli": {
    "packageManager": "npm"
  }
}
